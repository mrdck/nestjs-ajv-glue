{
  "name": "nestjs-ajv-glue",
  "version": "1.0.0",
  "description": "\"AJV OpenAPI glue for NestJS\"",
  "main": "index.js",
  "author": "Mateusz Perlak",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest --coverage"
  },
  "keywords": [
    "ajv",
    "nestjs",
    "glue",
    "json-schema",
    "json-schema-validation",
    "validation",
    "validator"
  ],
  "homepage": "https://github.com/mrdck/nestjs-ajv-glue",
  "bugs": "https://github.com/mrdck/nestjs-ajv-glue/issues",
  "devDependencies": {
    "@nestjs/common": "^8.0.8",
    "@nestjs/core": "^8.0.9",
    "@nestjs/platform-express": "^8.0.9",
    "@nestjs/testing": "^8.0.9",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.0.0 || ^8.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(/tests/(.*))\\.test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "ajv": "^8.6.3"
  }
}
